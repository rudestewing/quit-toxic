# Environment Variables for Quit Toxic - Example Configuration
# Copy this file to .env and modify the values as needed

# Application Info
VITE_APP_NAME=Quit Toxic
VITE_APP_VERSION=0.1.0

# Local Storage Keys - These should be unique for your application
VITE_MOOD_STORAGE_KEY=Quit-Toxic-color-mood
VITE_MOOD_SETTINGS_KEY=Quit-Toxic-mood-settings
VITE_MOOD_ANALYTICS_KEY=Quit-Toxic-mood-analytics
VITE_THEME_STORAGE_KEY=theme
VITE_ZUSTAND_STORAGE_NAME=quit-toxic-storage

# Mood System Configuration
# Auto mood check interval in milliseconds (default: 1 hour = 3600000ms)
VITE_AUTO_MOOD_CHECK_INTERVAL=3600000
# Default mood: calm, energetic, focused, cheerful, dark
VITE_DEFAULT_MOOD=calm
# Default theme: light, dark, system
VITE_DEFAULT_THEME=system

# Features Configuration
VITE_ENABLE_MOOD_AUTO_DETECTION=false
VITE_ENABLE_REMEMBER_LAST_MOOD=true
VITE_ENABLE_ANALYTICS=true

# Export/Import Configuration
VITE_EXPORT_FILE_PREFIX=Quit-Toxic-mood-preferences
VITE_EXPORT_DATE_FORMAT=YYYY-MM-DD
